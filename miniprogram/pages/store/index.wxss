page{
  height: 100%;
  background: #f5f5f5;
}
.book{
  width: 700rpx;
  margin:30rpx 30rpx 0;
  background: #fff;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}
.img__wrapper{
  width: 300rpx;
  height:400rpx;
  margin-right: 30rpx;
}
.book__img{
  height:400rpx;
  width: 300rpx;
}
.book__info{
  font-size: 13px;
  color: #555;
  line-height: 1.8;
}
.book__title{
  font-size:16px;
  color:#000;
  margin-top: 20rpx;
}
.book__subtitle{
  font-size:14px;
  color:#333;
}