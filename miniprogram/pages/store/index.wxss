page{
  height: 100%;
  background: #f5f5f5;
}
.book{
  width: 700rpx;
  margin:30rpx 30rpx 0;
  background: #fff;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}
.book-status{
  text-align: center;
  color: #fff;
  line-height: 1.2;
  width: 80px;
  transform:rotate(47deg);
  position: absolute;
  top: 15px;
  right: -20px;
}
.book-status--out{
  background: red;
}
.book-status--in{
  background: green;
}
.book-sharer{
  color: #fff;
  font-size: 14px;
  padding: 0rpx 20rpx;
  background: green;
  border-radius: 4px;
  text-align: center;
}
.img__wrapper{
  width: 300rpx;
  height:400rpx;
  margin-right: 30rpx;
}
.book__img{
  height:400rpx;
  width: 300rpx;
}
.book__info{
  font-size: 13px;
  color: #555;
  line-height: 1.8;
}
.book__title{
  font-size:16px;
  color:#000;
  margin-top: 20rpx;
}
.book__subtitle{
  font-size:14px;
  color:#333;
}